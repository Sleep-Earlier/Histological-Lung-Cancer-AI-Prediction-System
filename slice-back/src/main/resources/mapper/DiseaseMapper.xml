<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.slice.mapper.DiseaseMapper">

    <resultMap type="com.slice.pojo.entity.Disease" id="DiseaseMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
    </resultMap>


    <!--查询单个-->
    <select id="queryById" resultMap="DiseaseMap">
        select idnametype
        from disease
        where id = #{id}
    </select>
    <select id="queryByName" resultType="java.lang.Integer">
        select id
        from disease
        where name = #{name}
    </select>


    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into disease(nametype)
        values (#{name}#{type})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into disease(nametype)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}#{entity.type})
        </foreach>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update disease
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="type != null and type != ''">
                type = #{type},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from disease
        where id = #{id}
    </delete>

</mapper>



<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.slice.mapper.UserApplicationMapper">

    <resultMap type="com.slice.pojo.entity.UserApplication" id="UserApplicationMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="applicationId" column="application_id" jdbcType="INTEGER"/>
    </resultMap>


    <!--查询单个-->
    <select id="queryById" resultMap="UserApplicationMap">
        select iduser_idapplication_id
        from user_application
        where id = #{id}
    </select>
    <select id="queryByUserId" resultType="java.lang.Integer">
        select application_id
        from user_application
        where user_id = #{id}
    </select>


    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into user_application(user_idapplication_id)
        values (#{userId}#{applicationId})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into user_application(user_idapplication_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.userId}#{entity.applicationId})
        </foreach>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update user_application
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="applicationId != null">
                application_id = #{applicationId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from user_application
        where id = #{id}
    </delete>
    <delete id="deleteByUIdAndAId">
        delete
        from user_application
        where user_id = #{userId} and application_id = #{applicationId}
    </delete>

</mapper>


